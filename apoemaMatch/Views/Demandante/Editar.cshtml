@using apoemaMatch.Data.Enums
@model DemandanteViewModel

@{
    ViewData["Title"] = "Atualizar demandante";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Editar demandante</h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <form asp-action="Editar">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="NomeDemandante" class="control-label"></label>
                                <input asp-for="NomeDemandante" class="form-control" />
                                <span asp-validation-for="NomeDemandante" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CargoDemandante" class="control-label"></label>
                                <input asp-for="CargoDemandante" class="form-control" />
                                <span asp-validation-for="CargoDemandante" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NomeEmpresa" class="control-label"></label>
                                <input asp-for="NomeEmpresa" class="form-control" />
                                <span asp-validation-for="NomeEmpresa" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Cnpj" class="control-label"></label>
                                <input asp-for="Cnpj" class="form-control" />
                                <span asp-validation-for="Cnpj" class="text-danger"></span>
                            </div>
                            <div class="form-group hide">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" readonly />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Telefone" class="control-label"></label>
                                <input asp-for="Telefone" class="form-control" />
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TempoDeMercado" class="control-label"></label>
                                <input asp-for="TempoDeMercado" class="form-control" />
                                <span asp-validation-for="TempoDeMercado" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImagemURL" class="control-label"></label>
                                <input asp-for="ImagemURL" class="form-control" />
                                <span asp-validation-for="ImagemURL" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AreaSolucaoBuscada" class="control-label"></label>
                                <select asp-for="AreaSolucaoBuscada" class="form-control" asp-items="Html.GetEnumSelectList<EnumAreaSolucaoBuscada>()"></select>
                                <span asp-validation-for="AreaSolucaoBuscada" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LeiDeInformatica" class="control-label"></label>
                                <select asp-for="LeiDeInformatica" class="form-control" asp-items="Html.GetEnumSelectList<EnumLeiDeInformatica>()"></select>
                                <span asp-validation-for="LeiDeInformatica" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <label asp-for="LinhaDeAtuacaoTI" class="control-label"></label>
                                <select asp-for="LinhaDeAtuacaoTI" class="form-control" asp-items="Html.GetEnumSelectList<EnumLinhaDeAtuacaoTI>()"></select>
                                <span asp-validation-for="LinhaDeAtuacaoTI" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ObjetivoParceria" class="control-label"></label>
                                <select asp-for="ObjetivoParceria" class="form-control" asp-items="Html.GetEnumSelectList<EnumObjetivoParceria>()"></select>
                                <span asp-validation-for="ObjetivoParceria" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RamoDeAtuacao" class="control-label"></label>
                                <select asp-for="RamoDeAtuacao" class="form-control" asp-items="Html.GetEnumSelectList<EnumRamoDeAtuacao>()"></select>
                                <span asp-validation-for="RamoDeAtuacao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SegmentoDeMercado" class="control-label"></label>
                                <select asp-for="SegmentoDeMercado" class="form-control" asp-items="Html.GetEnumSelectList<EnumSegmentoDeMercado>()"></select>
                                <span asp-validation-for="SegmentoDeMercado" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RegimeDeTributacao" class="control-label"></label>
                                <select asp-for="RegimeDeTributacao" class="form-control" asp-items="Html.GetEnumSelectList<EnumTributacao>()"></select>
                                <span asp-validation-for="RegimeDeTributacao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PorteDaEmpresa" class="control-label"></label>
                                <select asp-for="PorteDaEmpresa" class="form-control" asp-items="Html.GetEnumSelectList<EnumPorteDaEmpresa>()"></select>
                                <span asp-validation-for="PorteDaEmpresa" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Descricao" class="control-label"></label>
                                <textarea asp-for="Descricao" class="form-control"></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImagemURLPreview" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Atualizar" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="MeuPerfilDemandante">Voltar</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
    @section Scripts{
        <script>
            $(document).ready(function () {
                var output = document.getElementById('ImagemURLPreview');
                output.src = $('#ImagemURL').val();
            })
            $('#ImagemURL').on("change", function () {
                var output = document.getElementById('ImagemURLPreview');
                output.src = $(this).val();
            })
        </script>
    }
