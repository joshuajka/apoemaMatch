@using apoemaMatch.Data.Enums

@model SolucionadorViewModel

@{
    ViewData["Title"] = "Atualizar Solucionador";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Atualizar Solucionador</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Editar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="ImagemURLPreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ImagemURL" class="control-label"></label>
                        <input asp-for="ImagemURL" class="form-control" />
                        <span asp-validation-for="ImagemURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group hide">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" readonly/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefone" class="control-label"></label>
                        <input asp-for="Telefone" class="form-control" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Formacao" class="control-label"></label>
                        <input asp-for="Formacao" class="form-control" />
                        <span asp-validation-for="Formacao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AreaDePesquisa" class="control-label"></label>
                        <select asp-for="AreaDePesquisa" class="form-control" asp-items="Html.GetEnumSelectList<EnumAreaSolucaoBuscada>()"></select>
                        <span asp-validation-for="AreaDePesquisa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CurriculoLattes" class="control-label"></label>
                        <input asp-for="CurriculoLattes" class="form-control" />
                        <span asp-validation-for="CurriculoLattes" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MiniBio" class="control-label"></label>
                        <input asp-for="MiniBio" class="form-control" />
                        <span asp-validation-for="MiniBio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Atualizar" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Mostrar todos</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImagemURLPreview');
            output.src = $('#ImagemURL').val();
        })
        $('#ImagemURL').on("change", function () {
            var output = document.getElementById('ImagemURLPreview');
            output.src = $(this).val();
        })
    </script>
}