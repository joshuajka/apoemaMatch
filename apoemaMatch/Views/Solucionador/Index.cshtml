@using apoemaMatch.Data.Enums
@model IEnumerable<Solucionador>

@{
    ViewData["Title"] = "Lista de Solucionadores";
}
<h2>Solucionadores</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white cor-apoema">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Nome
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Editar" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImagemURL" width="100%" alt="@item.Nome">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.MiniBio</p>
                            <p class="card-text"><b>Curriculo Lattes: </b>@item.CurriculoLattes</p>
                            <p class="card-text"><b>Formação: </b>@item.Formacao</p>
                            <p class="card-text"><b>Área de Pesquisa: </b>@Extensions.GetEnumDisplayName((EnumAreaSolucaoBuscada)item.AreaDePesquisa)</p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <a class="btn btn-danger text-white" asp-action="Excluir" asp-route-id="@item.Id">
                                        <i class="bi bi-trash"></i>Excluir
                                    </a>
                                }
                                <a class="btn btn-outline-primary float-right" asp-action="Detalhes" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Detalhes
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="text-white text-center">
        <a asp-controller="Account" asp-action="RegisterSolucionador" class="btn btn-success">
            <i class="bi bi-plus-circle">Adicionar</i>
        </a>
    </div>
}

