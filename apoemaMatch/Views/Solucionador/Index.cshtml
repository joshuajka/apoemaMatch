@model IEnumerable<Solucionador>

@{
    ViewData["Title"] = "Lista de Solucionadores";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ImagemURL)</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.MiniBio)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.ImagemURL" alt="@item.Nome" style="max-width: 150px"/>
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modeItem => item.Nome)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modeItem => item.MiniBio)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-action="Editar" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Editar</a>
                        <a class="btn btn-outline-info" asp-action="Detalhes" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Detalhes</a>
                        <a class="btn btn-danger text-white" asp-action="Excluir" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Excluir</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

    </div>
</div>

@await Html.PartialAsync("_CadastrarItem", "Solucionador") 
