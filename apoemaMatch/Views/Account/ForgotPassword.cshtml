@model EsqueciSenhaViewModel

@{
    ViewData["Title"] = "Esqueci a senha";
}

<div class="container">

    <div class="row">
        <div class="col-md-4 offset-4">
            @if (Model?.EmailSent == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>
                        Se estiver cadastrado conosco, <br />
                        enviaremos um email no endereço eletrônico vinculado
                    </p>
                </div>
            }
            else
            {
                <p>Esqueceu a senha? Não se preocupe, vamos resetá-la</p>
                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Enviar" class="btn btn-primary" />
                    </div>
                </form>
            }
            <div>
                <p>Voltar para o  <a asp-action="Login" asp-controller="Account">Login</a></p>
            </div>
        </div>

    </div>




</div>