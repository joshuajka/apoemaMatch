@model MudarEmailViewModel

@{
    ViewData["Title"] = "Alterar Email";
}
<div class="container">

    <h1 class="display-4 text-center">Alterar Email</h1>

    <hr />
    <div class="row">

        <div class="col-md-4 offset-4">
            @if (ViewBag.IsSuccess == true)
            {
                <div class="alert alert-success" role="alert">
                    Email alterado com sucesso
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Desculpe </b> - @TempData["Error"] </span>
                </div>
            }
            <form asp-action="ChangeEmail">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CurrentEmail" class="control-label"></label>
                    <input asp-for="CurrentEmail" class="form-control" />
                    <span asp-validation-for="CurrentEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewEmail" class="control-label"></label>
                    <input asp-for="NewEmail" class="form-control" />
                    <span asp-validation-for="NewEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmNewEmail" class="control-label"></label>
                    <input asp-for="ConfirmNewEmail" class="form-control" />
                    <span asp-validation-for="ConfirmNewEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Alterar email" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>