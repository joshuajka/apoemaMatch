@using apoemaMatch.Data.Enums
@model apoemaMatch.Data.ViewModels.EncomendaViewModel
@{
    ViewData["Title"] = "Inserir detalhes da Seleção";
}

<div class="d-none" id="detalhesSelecao">
    <div class="row">
        <div class="col-md-12 mb-3">
            <h2 style="text-align: center;">Insira os detalhes para o processo de seleção</h2>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="DescricaoChamada" class="control-label"></label>
                <textarea asp-for="DescricaoChamada" class="form-control"></textarea>
                <span asp-validation-for="DescricaoChamada" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="DataValidadeSelecao" class="control-label"></label>
                <input type="date" asp-for="DataValidadeSelecao" class="form-control"></input>
                <span asp-validation-for="DataValidadeSelecao" class="text"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="input-group mb-3">
                <input type="file" asp-for="ArquivoDetalheSelecao" class="form-control"></input>
                <span asp-validation-for="ArquivoDetalheSelecao" class="text"></span>
            </div>
        </div>


        <div class="col text-center">
            <button onclick="mostreQuestionarioSelecao()" type="button" class="btn btn-outline-secondary">Definir Critérios</button>
        </div>
    </div>
    </div>

@section Scripts{
    <script src=@Url.Content("~/js/QuestionarioSelecao/questionarioSelecao.js") asp-append-version="true"></script>
}