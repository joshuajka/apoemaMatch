@model apoemaMatch.Data.ViewModels.EncomendaViewModel
@{
    ViewData["Title"] = "Criar Questionário de Avaliação";
}


<div class="row" id="formularioAvaliacao">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Faça aqui um questionário para o processo de avaliação</h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="row">
                    <div class="col-md-12">
                        <div id="inputList">
                            <div class="col text-center">
                                <a class="btn btn-primary" onclick="AddInput()"><i class="bi bi-plus text-white"></i></a>
                                <br /><br />
                            </div>
                            <div class="input-group  teste-class">
                                <div class="input-group">
                                    <input asp-for="Titulo" class="form-control" placeholder="Insira a questão" />
                                    <div class="dropdown demolist">
                                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" onclick="AddElement()">
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <a class="dropdown-item" href="#">Textual</a>
                                            <a class="dropdown-item" href="#">Opções</a>
                                            <a class="dropdown-item" href="#">Seleção única</a>
                                        </div>
                                    </div>
                                    <a class="btn btn-danger text-white rmv_btn" onclick="RemoveInput()"><i class="bi bi-trash"></i></a>
                                </div>
                                <div class="input-element"></div>
                            </div>

                        </div>
                        <br /><br />
                        <div class="col text-center">
                            <button type="submit" class="btn btn-outline-warning" asp-controller="Encomenda" asp-action="Cadastrar">Publicar demanda</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script src=@Url.Content("~/js/FormularioAvaliacao/formularioAvaliacao.js") asp-append-version="true"></script>
}